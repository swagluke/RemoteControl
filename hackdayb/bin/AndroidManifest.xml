<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.canvas"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/typepad"
        android:label="@string/app_name" >
        <activity
            android:name="com.canvas.Canvas1"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.example.sparkgesture.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sparkgesture.MouseActivity"
            android:label="@string/title_activity_mouse" >
        </activity>
        <activity
            android:name="com.example.sparkgesture.Joystick"
            android:label="@string/title_activity_joystick" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

</manifest>